<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.betteridgeh16.revisionapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".Activities.Home"
            android:label="@string/app_name"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Launcher">
            android:theme="@style/MyTheme"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Courses"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".Activities.ExamBoards"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".Activities.Course"
            android:label="@string/title_activity_course"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".Activities.Revise"
            android:label="@string/title_activity_revise"
            android:theme="@style/MyTheme"></activity>
    </application>

</manifest>