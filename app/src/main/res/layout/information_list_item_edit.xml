<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/FlashcardFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="text|textMultiLine|textLongMessage|textPersonName"
        android:text="Flashcard Front" />

    <EditText
        android:id="@+id/FlashCardBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FlashcardFront"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Flashcard Back" />

    <EditText
        android:id="@+id/Sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/FlashCardBack"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/FlashcardFront"
        android:layout_toRightOf="@+id/FlashcardFront"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sentence" />
</RelativeLayout>