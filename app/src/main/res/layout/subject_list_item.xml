<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_launcher_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/imageView"
        android:padding="2dp"/>

    <TextView
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:id="@+id/subjectTextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:layout_below="@id/subjectTextView"
        android:id="@+id/examBoardTextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/imageView"
        android:layout_below="@id/subjectTextView"
        android:id="@+id/importantDateTextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qualificationTypeTextView"
        android:layout_below="@+id/subjectTextView"
        android:layout_toRightOf="@+id/examBoardTextView"
        android:layout_toEndOf="@id/examBoardTextView"
        android:layout_toLeftOf="@+id/importantDateTextView"
        android:layout_toStartOf="@+id/importantDateTextView"
        android:layout_alignBottom="@id/imageView"
        android:textAlignment="center"
        />

</RelativeLayout>
